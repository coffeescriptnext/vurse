<div class="container">
  <div class="col-lg-4 col-lg-offset-4">
    <div class="panel panel-default">
      <div class="panel-heading"><h1 class="panel-title">Account</h1></div>
      <div class="panel-body">
        <%- if flash.any? %>
          <%- flash.each do |type, message| %>
            <div class="alert alert-<%= type %>"><p><%= message %></p></div>
          <% end -%>
        <% end -%>

        <%= form_for(resource, as: resource_name, url: update_user_registration_path, html: { method: :patch, role: 'form' }) do |f| %>
          <%= devise_error_messages! %>

          <div class="form-group">
            <%= f.label :email do %>Email <span class="label label-warning">Required</span><% end %>
            <%= f.email_field :email, class: 'form-control input-lg' %>
          </div>

          <div class="form-group">
            <%= f.label :username do %>Username <span class="label label-warning">Required</span><% end %>
            <%= f.text_field :username, class: 'form-control input-lg' %>
          </div>

          <div class="form-group">
            <%= f.label :name, 'Display name' %>
            <%= f.text_field :name, autofocus: true, class: 'form-control input-lg' %>
          </div>

          <div class="form-group">
            <%= f.label :password, 'New password' %>
            <%= f.password_field :password, autocomplete: 'off', class: 'form-control input-lg' %>
          </div>

          <div class="form-group">
            <%= f.label :current_password do %>Current password <span class="label label-warning">Required</span><% end %>
            <%= f.password_field :current_password, autocomplete: 'off', class: 'form-control input-lg' %>
          </div>

          <%= f.submit 'Update account', class: 'btn btn-lg btn-block btn-primary' %>
        <% end %>
      </div>
    </div>
  </div>
</div>
