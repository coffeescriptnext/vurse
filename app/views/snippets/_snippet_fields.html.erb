<div class="form-group">
  <%= f.label :name, class: 'sr-only' %>
  <%= f.text_field :name, placeholder: 'Name', class: 'form-control' %>
</div>

<div class="form-group">
  <%= f.label :description, class: 'sr-only' %>
  <%= f.text_area :description, placeholder: 'Description', class: 'form-control', rows: 3 %>
</div>

<div class="snippet-pieces">
  <%= f.fields_for :pieces do |piece| %>
    <%= render partial: 'snippets/piece_fields', locals: { f: piece } %>
  <% end %>
</div>
