<table class="row">
  <tr>
    <td class="wrapper last">
      <table class="twelve columns">
        <tr>
          <td class="center">
            <center>
              <h1>Unlock your account</h1>

              <p>Your Vurse account has been locked due to an excessive number of invalid login attempts. Please use the link below to unlock your account.</p>

              <table class="button radius success">
                <tr>
                  <td>
                    <%= link_to 'Unlock account', show_user_unlock_url(@resource, unlock_token: @token) %>
                  </td>
                </tr>
              </table>
            </center>
          </td>
        </tr>
      </table>
    </td>
  </tr>
</table>
